<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="plugin-icon">images/pluginIcon.png</param>
        <param name="plugin-logo">images/pluginLogo.png</param>
    </plugin-info>

    <!-- add our i18n resource -->
    <resource type="i18n" name="i18n" location="colorPickMacro"/>
    
    <!-- add our web resources -->
    <web-resource key="colorPickMacro-resources" name="colorPickMacro Web Resources">
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        
        <resource type="download" name="colorPickMacro.css" location="/css/colorPickMacro.css"/>
        <resource type="download" name="colorPickMacro.js" location="/js/colorPickMacro.js"/>
        <resource type="download" name="images/" location="/images/pluginIcon.png"/>

        <context>colorPickMacro</context>
        <context>viewcontent</context>
        <context>preview</context>
    </web-resource>

    <xhtml-macro name="ColorPick" class="com.atlassian.tutorial.macro.colorPick" key='colorPick-macro'>
        <description key="colorPick.macro.desc"/>
        <category name="formatting"/>
        <parameters>
            <parameter name="Name" type="string" required="true"/>
            <parameter name="Alpha" type="string"/>
        </parameters>

    </xhtml-macro>

</atlassian-plugin>